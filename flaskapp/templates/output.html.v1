    <div class="starter-template">
        <!--<h2>Output Page</h2>-->
        <p>Enter a question related to autism</p>
    </div> <!-- starter template -->

    <div class = "container">
      <form  action="/output" method="GET">
        <div class="col-md-2">
          <div class="form-group">
            <label for="autism_query">Query:</label><br>
            <input type="text" id="autism_query" name='autism_query' placeholder="e.g. Potty training. ">
          </div> <!-- form-group -->
        </div> <!-- col -->
        <div class="col-md-3">
          <label for="selection">or select one:</label>
          <select class="form-control" id="selection" name="selection">
            {% for question in question_list %}
            <option>{{question['text']}}</option>
            {% endfor %}
        </div>
          </select>
        </div> <!-- col -->
        <div class="col-md-1">
          <div class="radio">
            <label><input type="radio" name="filter_opt">Filter posts</label>
          </div>
        </div> <!-- col -->
        <div class="col-md-1">
          <br>
          <div>
            <button type="submit" class="btn btn-primary">Search</button>
          </div> <!-- button -->
        </div> <!-- col -->
      </form>
     </div> <!-- container -->


  </div> <!-- row -->
  </div>
